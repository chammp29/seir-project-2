<h2>Edit Mini:</h2>

<form action="/miniatures/{{miniature.id}}?_method=put" method="post">

    <label>Title:</label>
    <textarea type="text" name="title">{{miniature.title}}</textarea>

    <label>Image:</label>
    <textarea type="text" name="image">{{miniature.image}}</textarea>

    <label>Notes:</label>
    <textarea type="text" name="notes">{{miniature.notes}}</textarea>

    <label>Categories:</label>
    <textarea type="text" name="category">{{miniature.category}}</textarea>

    <input type="submit" value="Update">

</form>

<form action="/miniatures/{{miniature.id}}?_method=delete" method="post">
    <input type="submit" value="Delete">
</form>

<button><a href="/miniatures/{{miniature.id}}">Cancel</a></button>