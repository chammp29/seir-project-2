<div class="header">
    <a href="/paints/{{paint.id}}">Back</a>
    <h1>Edit Paint:</h1>

</div>

<form action="/paints/{{paint.id}}?_method=put" method="post">

    <label>Paint Name:</label>
    <input type="text" name="name" value="{{paint.name}}">
    <label>Made by:</label>
    <input type="text" name="mfr" value="{{paint.mfr}}">
    <label>Color:</label>
    <input type="text" name="color" value="{{paint.color}}">
    <label>Notes:</label>
    <textarea type="text" name="notes">{{paint.notes}}</textarea>

    <input type="submit" value="Update">

</form>

<form action="/paints/{{paint.id}}?_method=delete" method="post">
    <input type="submit" value="Delete">
</form>